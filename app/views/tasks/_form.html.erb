
<div class="container mt-5">
<%= form_with model: @task, class: "card p-4" do |f| %>
<div class="mb-3">
  <%= f.label :title, class: 'form-label' %>
  <%= f.text_field :title, class: 'form-control'%>
  </div>
  <div class="mb-3">
  <%= f.label :details, class: 'form-label' %>
  <%= f.text_field :details, class: 'form-control' %>
  </div>
  <%= f.submit "Validate", class: "btn btn-primary" %>
<% end %>
</div>
